<section class="text-gray-700 body-font">
  <div class="container items-center mx-auto">
    <div class="mx-auto mb-2 text-center lg:w-2/6 md:w-1/2">
      <h1 class="text-3xl font-medium">{{ 'app.reset_password' | t }}</h1>
    </div>

    <div class="w-full p-8 mx-auto mt-10 bg-gray-200 rounded-lg lg:w-2/6 md:w-1/2 md:mt-0">
      <form action="/authentication-links/create" method="post">
        {% include 'authenticity_token' %}

        <label class="block mt-3" for="email">
          <span class="block">E-mail</span>
          <input name="authentication_link[email]" type="text" id="email" value="{{ object.email }}" class="w-full form-input" autofocus />
          {% if object.errors.email %}
            <span class="text-red-800">{{ object.errors.email }}</span>
          {% endif %}
        </label>

        <button class="mt-3 button">Send email with authentication link</button>
      </form>

      <p class="mt-8 text-gray-600">
        Don't have an account? <a href='/sign-up' class="underline">Register</a>. Forgotten password? <a href='/reset-password' class="underline">Reset Password</a>
      </p>
    </div>
  </div>
</section>
